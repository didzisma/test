<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="content-wrapper">
            {% block header_menu %}
                <div class="header-menu">
                    <ul>
                        <li>
                            <a href="{{ path('homepage') }}">
                                {{ 'Homepage'|trans }}
                            </a>
                        </li>
                        {% if app.user %}
                            <li>
                                <a href="{{ path('logout') }}">
                                    {{ 'Logout'|trans }}
                                </a>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{ path('user_login') }}">
                                    {{ 'Login'|trans }}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('user_register') }}">
                                    {{ 'Register'|trans }}
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            {% endblock %}

            {% block body %}{% endblock %}
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
